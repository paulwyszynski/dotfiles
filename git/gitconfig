[user]
	name = Paul Wyszynski
	email = paul.wyszynski@jamitlabs.com
[core]
	excludesfile = \"$HOME\"/.gitignore
  pager = delta
[diff]
  tool = nvimdiff2
  colorMoved = default
[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE
  trustExitCode = false
[merge]
  tool = nvimdiff3
  conflictstyle = diff3
[mergetool "nvimdiff3"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c 'wincmd W' -c 'wincmd J'
  trustExitCode = false
[commit]
	template = \"$HOME\"/.stCommitMsg
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
[pull]
	rebase = true
[fetch]
	prune = true
