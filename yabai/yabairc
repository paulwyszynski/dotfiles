# Layout bsb / stack / float
yabai -m config layout bsp
yabai -m config window_placement second_child

# Window paddings
yabai -m config top_padding    8
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     8

# Mouse settings
# Put cursor in the middle of the focused window
yabai -m config mouse_follows_focus on
yabai -m config mouse_modifier alt
# Left click + drag
yabai -m config mouse_action1 move
# Right click + drag
yabai -m config mouse_action2 resize

yabai -m config mouse_drop_action swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Clockify Desktop$" manage=off
yabai -m rule --add app="^Android File Transfer$" manage=off
yabai -m rule --add app="^VIA$" manage=off
yabai -m rule --add app="^Alfred Preferences$" manage=off
yabai -m rule --add app="^AppCleaner$" manage=off
yabai -m rule --add app="^Logi Options+$" manage=off
yabai -m rule --add app="^Telegram$" manage=off
yabai -m rule --add app="^Simulator$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
